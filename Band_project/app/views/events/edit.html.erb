<%= form_for @event do |f| %>
  <%= f.calendar_date_ :date, placeholder: 'mm/dd/yyyy' %><br>
  <%= f.label :alcohol_served, "Alcohol Served?"%> 
  <%= f.check_box :alcohol_served%> <br>
  <%= f.collection_select :venue_id, Venue.all, :id, :name %>
  <%= f.collection_select :band_id, Band.all, :id, :name %>
  <%= f.submit %>
<% end %>
<%= link_to "Delete this", band_path, method: :delete%>