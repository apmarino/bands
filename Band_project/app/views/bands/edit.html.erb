<%= form_for @band do |f| %>
  <%= f.text_field :name, placeholder: 'Name' %>
  <%= f.text_field :genre, placeholder: 'Genre' %>
  <%= f.label :explicit_lyrics, "Explicit Lyrics?", class:"check"%> 
  <%= f.check_box :explicit_lyrics%> <br>
  <%= f.submit class:"submit"%>
<% end %>
<%= link_to "Delete this", band_path, method: :delete%>