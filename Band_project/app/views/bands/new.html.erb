<div class="new">
  <%= form_for @band do |f| %>
    <%= f.text_field :name, placeholder: 'Name' %><br>
    <%= f.text_field :genre, placeholder: 'Genre' %><br>
    <%= f.label :explicit_lyrics, "Explicit Lyrics?", class:"check"%> 
    <%= f.check_box :explicit_lyrics %> <br>
    <%= f.submit class:"submit"%>
  <% end %>
</div>

